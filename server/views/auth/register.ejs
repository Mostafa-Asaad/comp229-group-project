<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<div class="container" style="background-color: cornsilk;">
    <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>
    <div class="row justify-content-center">
    <a href="/"><img style= "margin-top:75px;" class = "loginlogo" src="../../../Assets/images/team_logo.png"/></a>
    
    <div class ="col-6"  style= "margin-top:75px;">

    <div class="position-relative m-4">
                <div class="progress" style="height: 1px;">
    <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <span  class="badge  bg-primary position-absolute top-0 start-0 translate-middle  rounded-pill">Sign Up</span>
  <span class="badge  bg-secondary position-absolute top-0 start-50 translate-middle  rounded-pill">Create New Survey</span>
  <span class="badge  bg-secondary position-absolute top-0 start-100 translate-middle  rounded-pill">Get Results</span>
</div>

            <p style="font-family: Courier; font-size:200%; text-align:center; color: #1b7ced;" >Create a FREE Account</p>

            <form method="POST" autocomplete="off">
                <fieldset class="form-group" style= "margin-bottom:10px;">
                    <input type="text" class="form-control"
                    id="username"
                    placeholder="Enter username"
                    name="username" required autofocus>
                </fieldset>

                

                <fieldset class="form-group" style= "margin-bottom:15px;">
                    <input type="email" class="form-control"
                    id="email"
                    placeholder="Enter Email Address"
                    name="email" required>                    
                </fieldset>

                <fieldset class="form-group" style= "margin-bottom:15px;">
                    <input type="password" class="form-control"
                    id="password"
                    placeholder="Enter password"
                    name="password" required>                    
                </fieldset>

                <!--
                <fieldset class="form-group">
                    <input type="text" class="form-control"
                    id="displayName"
                    placeholder="Enter Display Name"
                    name="displayName" required>                    
                </fieldset>
                -->
                <p style="color: white;" >Already have an account? <a href="/login">Login</a></p>

                <fieldset class="form-group text-right">
                    <button type="submit" class="btn btn-primary">Register</button>                    
                    <a href="/survey-list">
                         <input type="button" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>

                

            </form>
        </div>

    </div>
</div>

