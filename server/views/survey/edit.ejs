<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Edit page -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <!-- survey image -->
        <a href="/"><img style= "margin-top:20px; margin-bottom:50px; height: 20%; width:32%;" class = "loginlogo d-none d-lg-block" src="../../../Assets/images/fill-out-form-icon-10.jpg.png"/></a>
            <!-- tittle -->
            <p style="font-family: Courier; font-size:200%; text-align:center; color: #1b7ced; margin-top:30px; margin-bottom:30px" >Edit your Survey</p>
            <!-- Edit form -->
            <form class="form" method="POST">
              <div class="form-group">
                <label style="color: white;" for="NameTextField">Title</label>
                <input type="text" style="margin-bottom:30px" class="form-control" id="NameTextField"
                placeholder="Survey Name" name="title" value="<%= survey.title %>" required>
              </div>
              <!-- date -->
              <div class="form-group" style="margin-bottom:30px">
                <div class="row">
                  <div class="col align-self-start">
                    <label style="color: white;" for="">Start Date</label>
                    <input type="date" class="" id=""
                    placeholder="Survey start date" name="startdate" value="<%= survey.startdate.toISOString().substr(0, 10) %>"  required>
                  </div>
                  <div class="col align-self-end">
                    <label style="color: white;" for="">End Date</label>
                    <input type="date" class="" id=""
                    placeholder="Survey end date" name="enddate" value="<%= survey.enddate.toISOString().substr(0, 10) %>"  required>
                  </div>
                </div>
              </div>    
            <!-- questions -->
              <div class="form-group" style="margin-bottom:30px">
                <label style="color: white;" for="NameTextField">Questionn #1</label>
                <input type="text" class="form-control" id=""
                placeholder="Questionn #1" name="q1" value="<%= survey.question[0] %>" required>
              </div>

              <div class="form-group" style="margin-bottom:30px">
                <label style="color: white;" for="NameTextField">Questionn #2</label>
                <input type="text" class="form-control" id=""
                placeholder="Questionn #2" name="q2" value="<%= survey.question[1] %>" required>
              </div>

              <div class="form-group" style="margin-bottom:30px">
                <label style="color: white;" for="NameTextField">Questionn #3</label>
                <input type="text" class="form-control" id=""
                placeholder="Questionn #3" name="q3"value="<%= survey.question[2] %>" required>
              </div>

              <div class="form-group" style="margin-bottom:30px">
                <label style="color: white;" for="NameTextField">Questionn #4</label>
                <input type="text" class="form-control" id=""
                placeholder="Questionn #4" name="q4" value="<%= survey.question[3] %>" required>
              </div>

              <div class="form-group" style="margin-bottom:30px">
                <label style="color: white;" for="NameTextField">Questionn #5</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Questionn #5" name="q5" value="<%= survey.question[4] %>" required>
              </div>
            <!-- bottons -->
              <button class="btn btn-primary " style="margin-bottom:30px" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
            
                <a href="/mypage" style="margin-bottom:30px" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
            
        </div>

    </div>
</div>

